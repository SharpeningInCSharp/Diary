<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Diary.Views.AccountPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry WidthRequest="200" HeightRequest="80"
                     VerticalOptions="Start" Margin="0,50,0,0" HorizontalOptions="Center"
                     BackgroundColor="Transparent"/>

            <Entry IsPassword="true" WidthRequest="200"
                     VerticalOptions="Start" Margin="0,100,0,0" HorizontalOptions="Center"
                     BackgroundColor="Transparent"/>

            <Button  x:Name="AuthButton" WidthRequest="80" HeightRequest="80" ImageSource="plus.png" 
                     VerticalOptions="Start" Margin="0,150,0,0" HorizontalOptions="Center"
                     BackgroundColor="Transparent" Clicked="AuthButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>