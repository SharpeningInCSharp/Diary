<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Diary.Views.MenuPage"
             Title="Menu"
             BackgroundColor="{StaticResource PaletteGrayBlue}">
             
    <Grid VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        
        <Image Source="logo_pdf.png" Grid.Row="0" Margin="5"/>

        <BoxView Style="{StaticResource LineSeparator}" Margin="0"
                                     Grid.Row="1"/>

        <ListView x:Name="ListViewMenu" Grid.Row="2"
                    HasUnevenRows="True"
                  ItemSelected="ListViewMenu_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid x:Name="opa" Padding="10">
                            <Label Text="{Binding Title}" FontSize="20" TextColor="{StaticResource PaletteBeige}"/>
                        </Grid>                        
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <BoxView Style="{StaticResource LineSeparator}" Margin="0"
                                     Grid.Row="3"/>

        <Label Grid.Row="4" Text="Add New TaskList" Margin="15" TextColor="{StaticResource PaletteDarkBeige}"
               HorizontalTextAlignment="Start" FontSize="26" FontAttributes="Bold">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="AboutClick"/>
            </Label.GestureRecognizers>
        </Label>
        
        <Label Grid.Row="5" Text="About" Margin="15" TextColor="{StaticResource PaletteDarkBeige}"
               HorizontalTextAlignment="Start" FontSize="26" FontAttributes="Bold">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="AboutClick"/>
            </Label.GestureRecognizers>
        </Label>

    </Grid>

</ContentPage>